<div class='container'>
  <h1 class='my-5'>Ingresa tu Pelicula</h1>
  <%= form_with model: @movie, method: :post do |form| %>
    <div class="col-4">
      <div>
        <%= form.label :name, "Nombre", class: "form-label"%>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div>
        <%= form.label :synopsis, "Resumen", class: "form-label" %>
        <%= form.text_field :synopsis, class: "form-control" %>
      </div>
      <div>
        <%= form.label :director, "Director", class: "form-label" %>
        <%= form.text_field :director, class: "form-control" %>
      </div>
      <div class='mt-4'>
        <%= form.submit "Enviar", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
